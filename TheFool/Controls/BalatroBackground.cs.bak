using Avalonia;
using Avalonia.Controls;
using Avalonia.Media;

namespace TheFool.Controls
{
    public class BalatroBackground : ContentControl
    {
        private bool _isInitialized = false;

        public BalatroBackground()
        {
            this.Loaded += OnLoaded;
        }

        private void OnLoaded(object? sender, Avalonia.Interactivity.RoutedEventArgs e)
        {
            if (_isInitialized) return;
            
            // Set Balatro-style background with gradient
            var gradientBrush = new LinearGradientBrush
            {
                StartPoint = new RelativePoint(0, 0, RelativeUnit.Relative),
                EndPoint = new RelativePoint(1, 1, RelativeUnit.Relative)
            };
            
            gradientBrush.GradientStops.Add(new GradientStop(Color.FromRgb(26, 26, 46), 0));
            gradientBrush.GradientStops.Add(new GradientStop(Color.FromRgb(35, 35, 60), 0.5));
            gradientBrush.GradientStops.Add(new GradientStop(Color.FromRgb(26, 26, 46), 1));
            
            this.Background = gradientBrush;
            _isInitialized = true;
        }

    }
}