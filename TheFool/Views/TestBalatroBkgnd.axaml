<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:TheFool.Controls"
        x:Class="TheFool.Views.TestBalatroBkgnd"
        Title="Balatro Background Test"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        TransparencyLevelHint="None"
        SystemDecorations="Full">
    
    <Grid Background="Black">
        <!-- GPU-accelerated Balatro animated background -->
        <controls:BalatroBkgndGPU x:Name="BalatroBkgndGPU" />
        
        <!-- Some content on top to see the effect -->
        <Border Background="#AA000000"
                CornerRadius="20"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="20">
                <TextBlock Text="🃏 BALATRO BACKGROUND TEST 🃏"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                
                <TextBlock Text="The hypnotic swirling paint effect is running!"
                          FontSize="18"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Opacity="0.9"/>
                
                <StackPanel Orientation="Horizontal" 
                           Spacing="20" 
                           HorizontalAlignment="Center">
                    <Button Content="Slow Motion"
                            x:Name="SlowMotionButton"
                            Padding="15,10"/>
                    <Button Content="Normal Speed"
                            x:Name="NormalSpeedButton"
                            Padding="15,10"/>
                    <Button Content="Hyperspeed"
                            x:Name="HyperspeedButton"
                            Padding="15,10"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
