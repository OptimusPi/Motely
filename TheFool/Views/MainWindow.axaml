<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TheFool.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="TheFool.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="🃏 The Fool - Balatro Seed Oracle"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BalatroBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <TabControl Grid.Row="0">
            
            <!-- Setup Tab -->
            <TabItem Header="🎯 SETUP">
                <ScrollViewer Padding="20">
                    <StackPanel Spacing="25">
                        
                        <!-- Deck Configuration Card -->
                        <Border Background="{StaticResource BalatroCardBackground}"
                                BorderBrush="{StaticResource BalatroBorder}"
                                BorderThickness="3"
                                CornerRadius="12"
                                Padding="25">
                            <StackPanel Spacing="20">
                                <TextBlock Text="🃏 DECK CONFIGURATION" 
                                          FontSize="28" 
                                          FontWeight="Bold" 
                                          Foreground="{StaticResource BalatroSecondary}"
                                          HorizontalAlignment="Center"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Deck Selection -->
                                    <StackPanel Grid.Column="0" Spacing="12">
                                        <TextBlock Text="🎴 Deck:" FontWeight="Bold" FontSize="18"/>
                                        <ComboBox ItemsSource="{Binding AvailableDecks}"
                                                 SelectedItem="{Binding Config.Deck}"
                                                 MinWidth="250"
                                                 FontSize="14"/>
                                    </StackPanel>
                                    
                                    <!-- Stake Selection -->
                                    <StackPanel Grid.Column="2" Spacing="12">
                                        <TextBlock Text="⚡ Stake:" FontWeight="Bold" FontSize="18"/>
                                        <ComboBox ItemsSource="{Binding AvailableStakes}"
                                                 SelectedItem="{Binding Config.Stake}"
                                                 MinWidth="250"
                                                 FontSize="14"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Configuration Name -->
                                <StackPanel Spacing="12">
                                    <TextBlock Text="📝 Configuration Name:" FontWeight="Bold" FontSize="18"/>
                                    <TextBox Text="{Binding ConfigName}" 
                                            MinWidth="400"
                                            FontSize="14"
                                            Watermark="Enter your epic configuration name..."/>
                                </StackPanel>
                                
                                <!-- Action Buttons -->
                                <StackPanel Orientation="Horizontal" 
                                           Spacing="15" 
                                           HorizontalAlignment="Center"
                                           Margin="0,10,0,0">
                                    <Button Content="💾 SAVE CONFIG" 
                                           Command="{Binding SaveConfigCommand}" 
                                           Padding="24,14"
                                           FontSize="18"/>
                                    <Button Content="📂 LOAD CONFIG" 
                                           Command="{Binding LoadConfigCommand}" 
                                           Padding="24,14"
                                           FontSize="18"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Search Tab -->
            <TabItem Header="🔍 SEARCH">
                <ScrollViewer Padding="20">
                    <StackPanel Spacing="25">
                        
                        <!-- Search Criteria Card -->
                        <Border Background="{StaticResource BalatroCardBackground}"
                                BorderBrush="{StaticResource BalatroBorder}"
                                BorderThickness="3"
                                CornerRadius="12"
                                Padding="25">
                            <StackPanel Spacing="20">
                                <TextBlock Text="🎯 SEARCH CRITERIA" 
                                          FontSize="28" 
                                          FontWeight="Bold" 
                                          Foreground="{StaticResource BalatroSecondary}"
                                          HorizontalAlignment="Center"/>
                                
                                <!-- Quick Add Buttons -->
                                <StackPanel Spacing="15">
                                    <TextBlock Text="🎲 Quick Add Items:" FontWeight="Bold" FontSize="18"/>
                                    <StackPanel Orientation="Horizontal" 
                                               Spacing="15" 
                                               HorizontalAlignment="Center">
                                        <Button Content="🃏 Add Joker" 
                                               Command="{Binding AddQuickJokerCommand}" 
                                               Padding="18,12"
                                               FontSize="16"/>
                                        <Button Content="🌟 Add Tarot" 
                                               Command="{Binding AddQuickTarotCommand}" 
                                               Padding="18,12"
                                               FontSize="16"/>
                                        <Button Content="🎫 Add Voucher" 
                                               Command="{Binding AddQuickVoucherCommand}" 
                                               Padding="18,12"
                                               FontSize="16"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Required Items List -->
                                <StackPanel Spacing="12">
                                    <TextBlock Text="📋 Required Items:" FontWeight="Bold" FontSize="18"/>
                                    <Border Background="{StaticResource BalatroBackground}"
                                            BorderBrush="{StaticResource BalatroBorder}"
                                            BorderThickness="2"
                                            CornerRadius="8"
                                            Padding="10">
                                        <ListBox ItemsSource="{Binding RequiredItems}" 
                                                Height="250"
                                                Background="Transparent"
                                                BorderThickness="0">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{StaticResource BalatroCardBackground}"
                                                            BorderBrush="{StaticResource BalatroBorder}"
                                                            BorderThickness="1"
                                                            CornerRadius="6"
                                                            Padding="12,8"
                                                            Margin="2">
                                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                                            <TextBlock Text="{Binding Icon}" 
                                                                      FontSize="18"
                                                                      VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding Name}" 
                                                                      FontSize="14"
                                                                      FontWeight="Bold"
                                                                      VerticalAlignment="Center"
                                                                      Foreground="{StaticResource BalatroText}"/>
                                                            <Button Content="✕" 
                                                                   Command="{Binding $parent[ListBox].DataContext.RemoveCriteriaCommand}"
                                                                   CommandParameter="{Binding}"
                                                                   Width="30" Height="30"
                                                                   FontSize="12"
                                                                   HorizontalAlignment="Right"
                                                                   Background="{StaticResource BalatroAccent}"
                                                                   CornerRadius="15"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Run Tab -->
            <TabItem Header="🔥 RUN">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Main Launch Area -->
                    <Border Grid.Row="1"
                            Background="{StaticResource BalatroCardBackground}"
                            BorderBrush="{StaticResource BalatroBorder}"
                            BorderThickness="4"
                            CornerRadius="20"
                            Padding="40"
                            Margin="50"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <StackPanel Spacing="30" HorizontalAlignment="Center">
                            
                            <!-- Epic Title -->
                            <TextBlock Text="🔥 LET JIMBO COOK! 🔥" 
                                      FontSize="42" 
                                      FontWeight="Bold" 
                                      Foreground="{StaticResource BalatroSecondary}"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"/>
                            
                            <!-- Subtitle -->
                            <TextBlock Text="Ready to find some epic seeds?" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="{StaticResource BalatroText}"
                                      HorizontalAlignment="Center"
                                      TextAlignment="Center"
                                      Opacity="0.8"/>
                            
                            <!-- Launch Button -->
                            <Button Content="🚀 START SEARCH" 
                                   Command="{Binding StartSearchCommand}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Padding="45,22"
                                   HorizontalAlignment="Center"
                                   Background="{StaticResource BalatroSecondary}"
                                   Foreground="{StaticResource BalatroTextDark}"
                                   BorderBrush="{StaticResource BalatroSecondary}"
                                   CornerRadius="12"/>
                            
                            <!-- Fun Stats or Info -->
                            <StackPanel Orientation="Horizontal" 
                                       Spacing="20" 
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0">
                                <Border Background="{StaticResource BalatroBackground}"
                                        BorderBrush="{StaticResource BalatroBorder}"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="15,10">
                                    <StackPanel Spacing="5" HorizontalAlignment="Center">
                                        <TextBlock Text="🎯" FontSize="20" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Precision" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{StaticResource BalatroBackground}"
                                        BorderBrush="{StaticResource BalatroBorder}"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="15,10">
                                    <StackPanel Spacing="5" HorizontalAlignment="Center">
                                        <TextBlock Text="⚡" FontSize="20" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Speed" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{StaticResource BalatroBackground}"
                                        BorderBrush="{StaticResource BalatroBorder}"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="15,10">
                                    <StackPanel Spacing="5" HorizontalAlignment="Center">
                                        <TextBlock Text="🃏" FontSize="20" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Power" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="1" 
                Background="{StaticResource BalatroSecondary}" 
                BorderBrush="{StaticResource BalatroBorder}"
                BorderThickness="0,2,0,0"
                Height="40"
                Margin="0"
                CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                          Text="🔮" 
                          VerticalAlignment="Center" 
                          Margin="15,0,10,0"
                          FontSize="18"/>
                          
                <TextBlock Grid.Column="1"
                          Text="{Binding StatusText}" 
                          VerticalAlignment="Center" 
                          Foreground="{StaticResource BalatroTextDark}"
                          FontWeight="Bold"
                          FontSize="16"/>
                          
                <TextBlock Grid.Column="2"
                          Text="Ready to find some epic seeds!" 
                          VerticalAlignment="Center" 
                          Margin="10,0,15,0"
                          Foreground="{StaticResource BalatroTextDark}"
                          FontWeight="Bold"
                          FontSize="14"
                          Opacity="0.8"/>
            </Grid>
        </Border>
    </Grid>
</Window>